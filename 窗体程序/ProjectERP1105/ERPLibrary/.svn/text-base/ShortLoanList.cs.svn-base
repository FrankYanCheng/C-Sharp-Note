using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using ERPLibrary;

namespace ERPChess
{
    public class ShortLoanList
    {
        /// <summary>
        /// 记录第几年的短期贷款
        /// </summary>
        public int year;
        /// <summary>
        /// 记录短期贷款时间
        /// </summary>
        public string shortDateTime = string.Empty;
        /// <summary>
        /// 记录短期贷款名称，登记、还款使用到
        /// </summary>
        public string shortLoan = string.Empty;
        public int payOffyear;
        /// <summary>
        /// 记录是否有短期贷款
        /// </summary>
        public LoanType loanType = LoanType.Null;
        /// <summary>
        /// 实例化一个长期5年贷款类型
        /// </summary>
        public ILoan loan = new Loan();
        /// <summary>
        /// 记录短期贷款额
        /// </summary>
        public double shortLoanAmount = 0;
    }
}
